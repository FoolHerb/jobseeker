.user_container{
	
}

.user_container .user_info{
	background-color: #007AFF;
	padding-top: 30px; /*padding内填充*/
	padding-left: 30px;
	padding-right: 30px;
	padding-bottom: 30px;
	display : flex;
}

.user_container .user_info .photo{
	width : 90px;
	height: 90px;
	border-radius: 45px;
	border: solid #fff 3px;
	background-color: #bbb;
	margin-bottom: 0px;
	background-image: url(img/head.png);
	background-size: cover;
	margin-right: 15px;
}

.user_container .user_info .username{
	color: #fff;
	font-size: 24px;
	margin-top: 0px;
}

.user_container .user_info .level{
	display: inline-block;
	height: 24px;
	width: 40px;
	background-color: #fff;
	text-align: center;
	line-height: 22px;
	color: #007AFF;
/*	vertical-align: middle*/
	border-radius: 3px;
	font-size: 14px;
}

.user_container .user_info .vip{
	font-size: 14px;
	color: #fff;
	margin-left: 5px;
}

.user_container .user_info .progress{
	height: 10px;
	background-color: rgba(255,255,255,0.5);
	border-radius: 4px;
}

.user_container .user_info .exp{
	height: 100%;
	background-color: #FFFFFF;
	border-radius: 4px;
}

.user_container .user_info dl{
	flex-grow: 1;
	margin-top: 8px;
	margin-bottom: 0;
}

.user_container .user_info dt{
	margin-bottom: 10px;
}

.user_container .user_info dt:last-child{
	margin-bottom: 0;
}

.user_container .user_action{
	margin-top: 0px;
	margin-bottom: 0px;
	display: flex;
	background-color: #006ee6;
	padding-top: 15px;
	padding-bottom: 15px;
}

.user_container .user_action dt{
	flex-grow: 1;
}

.user_container .user_action dd{
	border-left: solid 1px #fff;
	margin-left: 0;
}

.user_container .user_action span{
	color:#fff;
	font-size: 15px;
	display: block;
	text-align: center;
}

.navigator{
	background-color: #fff;
	overflow:hidden;
	padding: 0px;
	padding-top: 10px;
	padding-bottom: 10px;
}

.navigator dl{
	display: flex;
	justify-content: space-around;
	margin-left: 15px;
	margin-right: 15px;
	margin-bottom: 50px;
}

.navigator dt{
	width: 74px;
	height: 74px;
	background-color: #bbb;
	border-radius: 37px;
	text-align: center;
	line-height: 74px;
	position: relative; /*位移的标准点*/
}

.navigator .iconfont{
	color: #fff;
	font-size: 40px;
}

.navigator .color-1{
	background-color: #f66d03;
}

.navigator .color-2{
	background-color: #3ea2f7;
}

.navigator .color-3{
	background-color: #fbb314;
}

.navigator .color-4{
	background-color: #db0005;
}

.navigator .color-5{
	background-color: #ff4d4b;
}

.navigator .color-6{
	background-color: #fb2e74;
}

.navigator .color-7{
	background-color: #31bd80;
}

.navigator .color-8{
	background-color: #ff7a02;
}

.navigator span{
	position: absolute; /*绝对位移*/
	width: 74px;
	display:block ;
	text-align: center;
	color: #333;
	font-size: 15px;
	top: 85px;
	line-height: 1;
}

.recruit_container{
	
}

.recruit_container h4{
	font-weight: normal;
	font-size: 16px;
	margin-left: 20px;
	margin-top: 10px;
	margin-bottom: 10px;
	color: #333;
}

.recruit_container dl{
	margin-top: 0;
	margin-bottom: 10px;
}

.recruit_container dt{
	background-color: #fff;
	display: flex;
	padding: 15px;
	margin-bottom: 10px;
	position: relative;
}

.recruit_container .squre{
	width: 70px;
	height: 70px;
	background-color: #ccc;
	text-align: center;
	line-height: 70px;
	font-size: 30px;
	color: #333;
	margin-right: 15px;
}

.recruit_container ul{
	list-style: none;
	margin: 0;
	padding: 0;
	font-size: 15px;
	color: #333;
	flex-grow: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	/*对齐方式*/
}

.recruit_container li{
	overflow: hidden;
}

.recruit_container .job{
	float: left;
	/*向右浮动*/
	font-size: 18px;
}

.recruit_container .date{
	float: right;
	color: #555;
}

.recruit_container .company{
	float: left;
	color: #555;
}

.recruit_container .salary{
	float: right;
	color: red;
}

.recruit_container .welfare{
	color: #555;
	font-size: 14px;
	margin-right: 5px;
}

.recruit_container .education{
	color: #555;
	font-size: 14px;
	margin-right: 5px;
}

.recruit_container .city{
	color: #555;
	font-size: 14px;
	margin-right: 5px;
}

.recruit_container .iconfont{
	color: #999;
	font-size: 16px;
}

.recruit_container .tag{
	font-size: 13px;
	background-color: #31bd80;
	color: #fff;
	position: absolute;
	bottom: 0;
	width: 60px;
	right: 0;
	text-align: center;
	height: 26px;
	line-height: 26px;
}
